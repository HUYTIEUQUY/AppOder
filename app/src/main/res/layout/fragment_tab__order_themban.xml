<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_gd"
    android:orientation="vertical"
    tools:context=".Tab_Oder_themban">

    <!-- TODO: Update blank fragment layout -->
    <!--    số bàn  -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số bàn :"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edtSoBan"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />


    </LinearLayout>
    <!--    Chi tiết order -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/bg_oder"
        >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="20dp"
               android:orientation="horizontal"
               >

               <ImageView
                   android:id="@+id/imageThemMon"
                   android:layout_width="150dp"
                   android:layout_height="40dp"
                   android:src="@drawable/add_food"
                   android:layout_marginRight="30dp"
                   android:layout_marginLeft="20dp"

                   />
               <ImageView
                   android:id="@+id/imageThemNuoc"
                   android:layout_width="150dp"
                   android:layout_height="40dp"
                   android:src="@drawable/add_drink"
                   android:layout_marginRight="20dp"
                  />

           </LinearLayout>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
   android:paddingHorizontal="50dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/buttonTroLai"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Trở lại"
        android:layout_marginRight="100dp"/>

    <Button
        android:id="@+id/buttonLuu"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Lưu" />

</LinearLayout>




</LinearLayout>